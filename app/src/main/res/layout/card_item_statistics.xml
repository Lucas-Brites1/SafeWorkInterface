<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/white"
    >

    <!-- Total -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iconTotal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_total"
            android:contentDescription="Total Reclamacoes"
            app:tint="@color/nice_blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textAlignment="center"
            android:textColor="#111"
            android:textSize="12sp"
            android:fontFamily="@font/montserratregular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="X"
            android:textAlignment="center"
            android:textColor="#111"
            android:textSize="16sp"
            android:fontFamily="@font/montserratextrabold"
        />

    </LinearLayout>

    <!-- Em Andamento -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iconInProgress"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_progress"
            android:contentDescription="Em Andamento"
            app:tint="@color/nice_orange"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Andamento"
            android:textAlignment="center"
            android:textColor="#111"
            android:textSize="12sp"
            android:fontFamily="@font/montserratregular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="Y"
            android:textAlignment="center"
            android:textColor="#111"
            android:textSize="16sp"
            android:fontFamily="@font/montserratextrabold"
            />

    </LinearLayout>

    <!-- Resolvidas -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iconResolved"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_resolved"
            android:contentDescription="Resolvidas"
            app:tint="@color/nice_green"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolvidas"
            android:textAlignment="center"
            android:textColor="#111"
            android:textSize="12sp"
            android:fontFamily="@font/montserratregular"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z"
            android:layout_marginTop="5sp"
            android:textAlignment="center"
            android:textColor="#111"
            android:textSize="16sp"
            android:fontFamily="@font/montserratextrabold"
        />

    </LinearLayout>
</LinearLayout>
